# APP
NODE_ENV=development
PORT=3000

# DATABASE (Prisma + MySQL)
DATABASE_URL="mysql://USER:PASSWORD@HOST:PORT/DB_NAME"

# Optional (kalau mau dipakai di config lain)
DATABASE_HOST=localhost
DATABASE_PORT=3306
DATABASE_USER=root
DATABASE_PASSWORD=
DATABASE_NAME=dataset_backend

# JWT
# Ganti dengan secret random panjang (misal hasil `openssl rand -hex 64` atau pakai password generator)
JWT_ACCESS_TOKEN_SECRET="CHANGE_ME_ACCESS_SECRET"
JWT_ACCESS_TOKEN_EXPIRES_IN="15m"   # 15 menit, cocok buat access token

JWT_REFRESH_TOKEN_SECRET="CHANGE_ME_REFRESH_SECRET"
JWT_REFRESH_TOKEN_EXPIRES_IN="7d"   # 7 hari, contoh umum buat refresh token

# SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-smtp-or-app-password"
SMTP_FROM="Dataset Market <your-email@gmail.com>"
